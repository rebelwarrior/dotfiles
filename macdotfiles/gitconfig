# [user]
#   name = {{user_name}}
#   email = {{email}}
# [core]
#   sshCommand "ssh -i ~/.ssh/id_rsa_gov -F /dev/null"

## To Generate rsa files
# ssh-keygen -f id_rsa_github
# ssh-keygen -f id_rsa_bitbucket

## To Add rsa file password to key chain
# ssh-add -K ~/.ssh/{{file_name}}
